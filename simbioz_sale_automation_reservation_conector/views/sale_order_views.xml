<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_inherit_form" model="ir.ui.view">
        <field name="name">view.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">45</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_reserve']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['draft', 'waiting'])]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_set_waiting']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['draft', 'reserve'])]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('state', 'not in', ['sent', 'waiting', 'reserve'])]}
                </attribute>
                <attribute name="string">Before shipping</attribute>
            </xpath>

            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,sale,reserve,waiting</attribute>
            </xpath>

            <xpath
                expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='is_reservation']"
                position="attributes"
            >
                <attribute name="optional">hide</attribute>
            </xpath>

            <xpath
                expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='reserver_id']"
                position="attributes"
            >
                <attribute name="optional">hide</attribute>
            </xpath>

            <xpath expr="//button[@name='action_draft']" position="attributes">
                <attribute name="attrs">
                    {
                    'invisible': [('state', 'not in', ['reserve', 'waiting', 'cancel'])]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
