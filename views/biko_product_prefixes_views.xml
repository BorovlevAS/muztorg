<odoo>
    <record id="biko_product_prefixes_action_tree" model="ir.actions.act_window">
        <field name="name">Product prefixes</field>
        <field name="res_model">biko.product.prefixes</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Product prefixes
            </p>
            <p>
                Odoo helps you track all activities related to your Product prefixes.
            </p>
        </field>
    </record>

    <record id="biko_product_prefixes_view_tree" model="ir.ui.view">
        <field name="name">biko.product.prefixes.view.tree</field>
        <field name="model">biko.product.prefixes</field>
        <field name="arch" type="xml">
            <tree string="Prefixes" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>