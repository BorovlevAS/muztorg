<odoo>
    <record id="action_biko_product_model_tree" model="ir.actions.act_window">
        <field name="name">Product Models</field>
        <field name="res_model">biko.product.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="biko_product_model_tree" model="ir.ui.view">
        <field name="name">biko.product.model.view.tree</field>
        <field name="model">biko.product.model</field>
        <field name="arch" type="xml">
            <tree string="Product Models" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>