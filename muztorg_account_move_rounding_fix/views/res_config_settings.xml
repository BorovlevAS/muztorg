<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_account_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.inherited</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="biko_base_module.res_config_settings_account_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='muztorg_acc_additional_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="content-group">
                        <div class="row mt16">
                            <label
                                string="Max Available Difference"
                                for="max_avail_diff"
                                class="col-lg-3 o_light_label"
                            />
                            <field name="max_avail_diff" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
