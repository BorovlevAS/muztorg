<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="biko_akt_to_delivery_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <style>
                .report_content{
                    font-size: 14px;
                    font-family: 'Calibri';
                }
                .tab_report_header{
                    text-align: center !important;
                    font-size: 14px;
                    font-weight:bold;                                        
                    border: 1px solid black;
                    font-family: 'Calibri';
                    padding:10px;
                }                
                .tab_report_line{
                    text-align: center !important;
                    font-size: 14px;            
                    height:15px;                    
                    border: 1px solid black;
                    font-family: 'Calibri';
                    padding:10px;
                }
                </style>
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>                        
                        <td width="100%" align="center">
                            <b>
                                <h4 class="title">Акт видачі товару № 
                                    <span t-field="doc.code" /> від 
                                    <span t-field="doc.create_date" t-options="{'format': 'dd MMMM YYYY'}" /> року
                                </h4>
                            </b>
                        </td>
                    </tr>
                </table>

                <table width="100%" cellpadding="0" cellspacing="0" class="report_content">
                    <tr>
                        <td width="100%" align="left" valign="top" style="padding-right: 15px;">
                            <br />
                            <t t-if="doc.company_id">
                                <span style="white-space:nowrap;">
                                    <b>Виконавець:</b>
                                    <span t-field="doc.contact_name" />
                                </span>
                            </t>
                            <br />
                            <t t-if="doc.company_id">
                                <span style="white-space:nowrap;"><b>Клиент:</b>
                                    <span t-field="doc.contact_name" />
                                </span>
                            </t>
                            <br />
                            <t t-if="doc.company_id">
                                <span style="white-space:nowrap;"><b>Тел.:</b>
                                    <span t-field="doc.mobile" />
                                </span>
                            </t>
                            <br />
                            <br />
                        </td>
                    </tr>
                </table>


                <table width="100%" rules="all" cellspacing="0" cellpadding="2" class="tab_report_line">
                    
                    <tr>
                        <td name="th_description" class="tab_report_header">
                    Назва пристрою
                        </td>
                        <td name="th_description" class="tab_report_header">
                    Серійний номер
                        </td>
                    </tr>
                    <tr>
                        <td name="th_value" class="tab_report_line">
                            <span t-field="doc.product_name" /> 
                        </td>
                        <td name="th_value" class="tab_report_line">
                            <span t-field="doc.product_serial" />
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" class="tab_report_header">
                    Комплектність
                        </td>
                        <td name="th_description" class="tab_report_header">
                    Вид ремонту
                        </td>
                    </tr>
                    <tr>
                        <td name="th_value" class="tab_report_line">
                            <span t-field="doc.complexity" />
                        </td>
                        <td name="th_value" class="tab_report_line">
                            <span t-field="doc.garanty_type" />
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" colspan="2" class="tab_report_header">
                    Несправність
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" colspan="2" class="tab_report_line">
                            <span t-field="doc.malfunction" />
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" colspan="2" class="tab_report_header">
                    Пункт отримання товару на обслуговування
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" colspan="2" class="tab_report_line">
                            <span t-field="doc.pick_up_point" />
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" colspan="2" class="tab_report_header">
                    Ремонтний майданчик
                        </td>
                    </tr>
                    <tr>
                        <td name="th_description" colspan="2" class="tab_report_line">
                            <span t-field="doc.maintenance_point" />
                        </td>
                    </tr>
                </table>

                <br />
                <br />
                <br />

                <table width="100%" cellpadding="0" cellspacing="0" class="report_content">
                    <tr>
                        <td width="100%" align="left" valign="top">
                    Видав (працівник сервісного відділу) _________________________________
                    
                            <br />
                            <br />
                    Отримав (клієнт)______________________________
                            <br />
                            <br />

                        </td>
                    </tr>
                </table>

                <br />

                <p align="center">Лінія відрізу</p>

                <hr style = "border-top: 1px dashed black;"></hr>

                <br />

                <table width="100%" cellpadding="0" cellspacing="0">

                    <tr>
                        <td width="100%" align="center">
                            <b>
                                <span style="white-space:nowrap;">Квитанція видачу товару № 
                                    <span t-field="doc.code" />
                                </span>
                                <span t-field="doc.create_date" t-options="{'format': 'dd MMMM YYYY'}" />
                                <br />
                                <br />
                            </b>
                        </td>
                    </tr>
                </table>

                <table width="100%" rules="all" cellspacing="0" cellpadding="2" class="tab_report_line">
                    <colgroup valign="top">
                        <col width="40px" />
                    </colgroup>
                    <tr>
                        <td name="th_description" class="tab_report_header">
                    №
                        </td>
                        <td name="th_description" class="tab_report_header">
                    Назва пристрою
                        </td>
                        <td name="th_description" class="tab_report_header">
                    Серійний номер
                        </td>
                    </tr>
                    <tr>
                        <td name="th_value" class="tab_report_line">                                                
                    1
                        </td>
                        <td name="th_value" class="tab_report_line">
                            <span t-field="doc.product_name" />
                        </td>
                        <td name="th_value" class="tab_report_line">
                            <span t-field="doc.product_serial" />
                        </td>
                    </tr>

                </table>
                <br />
                <table width="100%" cellpadding="0" cellspacing="0" class="report_content">
                    <tr>
                        <td width="100%" align="left" valign="top">
                            <p>
                                <b>Ремонтний майданчик:</b>
                                <span t-field="doc.maintenance_point" />
                            </p>
                            <p>Видав (працівник сервісного відділу) _________________________________</p>
                            <p>Отримав (клієнт)______________________________</p>
                        </td>
                    </tr>
                </table>
            </div>

        </t>
    </template>


    <template id="biko_akt_to_delivery_container">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="biko_service_add_fields.biko_akt_to_delivery_template" t-lang="uk_UA"/>
            </t>
        </t>
    </template>
</odoo>
