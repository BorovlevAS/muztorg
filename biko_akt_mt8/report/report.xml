<odoo>
    <record id="biko_akt_mt8_paperformat_a4" model="report.paperformat">
        <field name="name">Akt priema tovarov na ekspertizu CL A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">7</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="biko_akt_mt8_sale_order_report" model="ir.actions.report">
        <field name="name">Akt priema tovarov na ekspertizu CL</field>
        <field name="model">crm.lead</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">biko_akt_mt8.biko_akt_mt8_container</field>
        <field name="report_file">biko_akt_mt8.biko_akt_mt8_container</field>
        <!--
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Akt - %s' % (object.name)) or 'Akt - %s' % (object.name)</field>
        -->
        <field name="print_report_name">'Akt - %s' % (object.code)</field>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="biko_akt_mt8.biko_akt_mt8_paperformat_a4"/>
    </record>
</odoo>
