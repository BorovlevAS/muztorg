<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="view_pos_session_form" model="ir.ui.view">
        <field name="name">pos.session.form.view.inherit</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
        <field name="arch" type="xml">
            <header position="inside">
                <button
                    class="oe_stat_button"
                    name="action_print_x_report"
                    type="object"
                    icon="fa-file-text-o"
                    attrs="{'invisible' : [('state', '=', 'closed')]}"
                    string="X-Report"
                />
            </header>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="get_related_return_orders" icon="fa-undo">
                    <field name="return_order_counter" string="Return Orders" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
