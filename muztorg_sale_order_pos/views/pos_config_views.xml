<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view.muztorg</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <sheet position="inside">
                <h2>Sale order POS</h2>
                <div class="row mt16 o_settings_container" id="sale_order_pos_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="is_auto_open_pos">
                        <div class="o_setting_left_pane">
                            <field name="is_auto_open_pos" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_auto_open_pos" />
                            <div class="text-muted">
                                Open the cashier interface after pressing the "Start
                                Shift" button
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="is_use_with_sale_order">
                        <div class="o_setting_left_pane">
                            <field name="is_use_with_sale_order" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_use_with_sale_order" />
                            <div class="text-muted">Used for working with Sale Orders</div>
                        </div>
                    </div>
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="department_ids"
                        attrs="{'invisible': [('is_use_with_sale_order', 'in', [False, ''])]}"
                    >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="department_ids" />
                            <div class="text-muted">
                                Available departments for this POS
                                configuration
                            </div>
                            <div class="content-group mt16">
                                <field name="department_ids" widget="many2many_tags" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="autoclose_session" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="autoclose_session" />
                            <div class="content-group mt16" attrs="{'invisible': [('autoclose_session', '=', False)]}">
                                <div class="row mt16">
                                    <label
                                        string="Autoclose Session Time"
                                        for="autoclose_session_time_string"
                                        class="col-lg-3 o_light_label"
                                    />
                                    <field
                                        name="autoclose_session_time_string"
                                        widget="timepicker"
                                        attrs="{'required' : [('autoclose_session', '=', True)]}"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        attrs="{'invisible': [('is_use_with_sale_order', 'in', [False, ''])]}"
                    >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="cash_journal_id" />
                            <div class="content-group mt16">
                                <field
                                    name="cash_journal_id"
                                    attrs="{'required' : [('is_use_with_sale_order', '=', True)]}"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </sheet>
        </field>
    </record>
</odoo>
