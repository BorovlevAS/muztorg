<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_seats_wizard" model="ir.ui.view">
        <field name="name">view_stock_seats_wizard</field>
        <field name="model">stock.picking.fill.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="stock_picking_id" readonly="1" />
                    <field name="picking_seats_ids" mode="tree">
                        <tree create="0" delete="0" editable="bottom">
                            <field name="np_shipping_weight" />
                            <field name="np_length" />
                            <field name="np_width" />
                            <field name="np_height" />
                            <field name="np_shipping_volume" />
                        </tree>
                    </field>
                    <button name="action_apply" type="object" string="Apply" />
                    <button string="Cancel" special="cancel" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_stock_seats_wizard" model="ir.actions.act_window">
        <field name="name">action_stock_seats_wizard</field>
        <field name="res_model">stock.picking.fill.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
