<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                <div id="nova_poshta">
                    <h2>Nova Poshta</h2>
                    <div class="row mt16 o_settings_container" name="nova_poshta_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="nova_poshta_details_settings">
                            <div class="o_setting_right_pane">
                                <field name="company_share_np_key" />
                                <label string="NP Key" class="o_light_label" for="company_share_np_key" />
                                <field name="company_share_np_ttn" />
                                <label string="NP TTN" class="o_light_label" for="company_share_np_ttn" />
                                <field name="company_share_np_sender" />
                                <label string="NP Senders" class="o_light_label" for="company_share_np_sender" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
